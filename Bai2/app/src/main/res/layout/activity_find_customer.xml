<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#F2F5FA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Tìm khách hàng"
            app:titleTextColor="@android:color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập SĐT hoặc Tên khách hàng" android:inputType="text" android:drawableStart="@android:drawable/ic_menu_search" android:backgroundTint="@color/purple_700"
            android:layout_marginBottom="12dp"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btnSearch"
            android:text="Tìm khách hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutResult"
        android:orientation="vertical"
        android:visibility="gone" tools:visibility="visible" android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvResultName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên: Nguyễn Văn A"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvResultPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SĐT: 0912345678"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvResultPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Điểm hiện tại: 100"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnGoToUpdate"
            android:text="Cập nhật điểm cho khách hàng này"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quay lại"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#BDBDBD"
        android:textColor="@android:color/black"/>

</LinearLayout>