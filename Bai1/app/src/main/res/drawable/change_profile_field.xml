<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Khi được focus -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurface" /> <!-- nền trắng -->
            <stroke
                android:width="2dp"
                android:color="#FFD600" /> <!-- viền vàng -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Bình thường -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurface" /> <!-- nền trắng -->
            <stroke
                android:width="2dp"
                android:color="#243B8B" /> <!-- viền xanh đậm -->
            <corners android:radius="20dp" />
        </shape>
    </item>

</selector>
